<h1>What Up <%= current_user.first_name %> </h1>
<div class="container"><%= image_tag current_user.profile_image.user_comment %></div>
<h3>check out what you have going on...</h3>

<div class="container bottom">
  <h2>Events Attending</h2>
  <div class="row">
    <% current_user.events_attending.each do |event| %>
      <div class="col-md-3">
        <div class="hovereffect">
           <img src="<%= event.event_images.first.trial %>" alt="..."> 
           <div class="overlay">
             <h2><%=event.title%></h2>
             <%= link_to "Enter", event, class: 'info' %>
          </div>
          </div>      
        </div>
      <% end %>
  </div> 
</div>



