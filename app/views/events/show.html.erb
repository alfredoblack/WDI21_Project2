 <h1><%=@event.title%></h1>
 <div class="container showevent">
    <div class="container angie">
      <%= image_tag @event.creator.profile_image.user_comment%>
      </div>

      <div class="container angiesays">
        <h3>Event Creator : <%=@event.creator.first_name %>  <%=@event.creator.last_name%></h3>
        <div class="headtitles">Location <%= @event.location%></div>
        <% if !current_user.events_attending.include?(@event) %>
          <div class="headtitles"><%= link_to "Attend Event", attend_event_path(@event), method: :post %></div>
        <% else %>
        <div class="headtitles"> Status: You are attending this event</div>
          <%= link_to "Leave Event", leave_event_path(@event), method: :delete %>

          
        <% end %>
        </div>


  </div>
  
   

  <p><%=@event.comment%></p>
          

<div class="container trump col-md-10 col-md-offset-1"> 
  <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
      <li data-target="#carousel-example-generic" data-slide-to="1"></li>
      <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
    <% @event.event_images.each do |image, user| %>
      <% if @event.event_images.first == image %>
        <div class="carousel-item active">
          <%= image_tag(image.event_show.url) %>
        </div>
      <% else %>
        <div class="carousel-item">
          <%= image_tag(image.event_show.url) %>
        </div>
      <% end %>
    <% end %>

    </div>
    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
      <span class="icon-prev" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
      <span class="icon-next" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

</div> 


  <p> Total Attendees:<%=@event.attendees.count %></p>
  <% @event.attendees.each do |attendee| %>
  <p><%= attendee.first_name %></p>
  <p><%= attendee.last_name %></p>
  <img src="<%=(attendee.profile_image.tiny_comment.url) %>" alt="..." class="thumb-nail">
  <p></p>

  <% end %>

  <%= link_to "Events", events_path %>
  

  <%= link_to 'Edit', edit_event_path(@event) %> |
  <%= link_to 'Back', events_path %>



