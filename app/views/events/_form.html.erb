<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :event_images %><br />
    <%event.event_images.each.with_index do |image, index|%>
    <%= image_tag(image.trial.url) %>
    <%= check_box_tag 'images_to_deleted[]', index %> Delete?
    <% end %>
    <%= f.file_field :event_images, multiple: true %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :comment %>
    <%= f.text_area :comment %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
