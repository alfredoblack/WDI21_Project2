<div class="card">
  <div class="card-block">
    <div class="dp"><%= @user.first_name%> <%= @user.last_name%></div>
    <h1 class="display-3"><%= image_tag current_user.profile_image.user_comment%></h1>
      <%= link_to "Edit My Profile", edit_user_registration_path %>
  </div>
</div>



<div class="container middle">
  <h2>Events Created</h2>
  <div class="row">
    <% @user.events.each do |event| %>
      <div class="col-md-3">
        <div class="hovereffect">
          <img class="img-responsive" src="<%= event.event_images.first.trial %>" alt="">
           <div class="overlay">
             <h2><%=event.title%></h2>
             <a class="info" href="/">Enter</a>
          </div>
          </div>      
        </div>
      <% end %>
  </div> 
</div>

<div class="container bottom">
  <h2>Events Attending</h2>
  <div class="row">
    <% @user.events_attending.each do |event| %>
      <div class="col-md-3">
        <div class="hovereffect">
           <img src="<%= event.event_images.first.trial %>" alt="..."> 
           <div class="overlay">
             <h2><%=event.title%></h2>
             <a class="info" href="/events/:id">Enter</a>
          </div>
          </div>      
        </div>
      <% end %>
  </div> 
</div>


 

      

     